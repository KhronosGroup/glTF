{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "eventNode",
    "type": "object",
    "description": "Event node definition.",
    "allOf": [ { "$ref": "glTFChildOfRootProperty.schema.json" } ],
    "properties": {
        "type": {
            "description": "Allowed types.",
            "anyOf": [
                {
                    "const": "OnStart"
                },
                {
                    "const": "OnUpdate"
                },
                {
                    "const": "OnValueChanged"
                },
                {
                    "const": "OnDemand"
                },
                {
                    "const": "OnInteraction"
                },
                {
                    "type": "string"
                }
            ]
        },
        "next": {
            "allOf": [ { "$ref": "glTFid.schema.json" } ],
            "description": "The index of the next ??? node to execute."
        },        
        "OnInteraction": {
            "type": "object",
            "$ref": "eventNode.OnInteraction.schema.json"
        },
        "OnValueChanged": {
            "type": "object",
            "$ref": "eventNode.OnValuechanged.schema.json"
        },
        "name": { },
        "extensions": { },
        "extras": { }
    },
    "required": [
        "type",
        "next"
    ],
    "not": {
        "required": [ "OnInteraction", "OnValueChanged"]
    }
}
