{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "scriptNode/event/OnInteraction",
    "type": "object",
    "description": "Script node event interaction definition.",
    "allOf": [ { "$ref": "glTFProperty.schema.json" } ],
    "properties": {
        "node": {
            "allOf": [ { "$ref": "glTFid.schema.json" } ],
            "description": "The index of the node."
        },
        "boundingSphere": {
            "type": "number",
            "description": "The radius of the bounding sphere. This property **MUST NOT** be defined when `boundingBox` is defined.",
            "default": 1.0,
            "minimum": 0.0
        },
        "boundingBox": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "description": "The vector of the bounding box. This property **MUST NOT** be defined when `boundingSphere` is defined.",
            "default": [ 1.0, 1.0, 1.0],
            "minItems": 3,
            "maxItems": 3
        },        
        "extensions": { },
        "extras": { }
    },
    "required": [
        "node"
    ],
    "not": {
        "required": [ "boundingSphere", "boundingBox" ]
    }
}
