{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "scriptNode/event",
    "type": "object",
    "description": "Script node event definition.",
    "allOf": [ { "$ref": "glTFProperty.schema.json" } ],
    "properties": {
        "type": {
            "description": "Allowed types.",
            "anyOf": [
                {
                    "const": "OnStart"
                },
                {
                    "const": "OnUpdate"
                },
                {
                    "const": "OnValueChanged"
                },
                {
                    "const": "OnDemand"
                },
                {
                    "const": "OnInteraction"
                },
                {
                    "type": "string"
                }
            ]
        },
        "linkedScriptNode": {
            "allOf": [ { "$ref": "glTFid.schema.json" } ],
            "description": "The index of the linked script node to execute next."
        },        
        "OnInteraction": {
            "type": "object",
            "$ref": "scriptNode.interaction.schema.json"
        },
        "OnValueChanged": {
            "type": "object",
            "$ref": "scriptNode.valuechanged.schema.json"
        },
        "extensions": { },
        "extras": { }
    },
    "required": [
        "type",
        "linkedScriptNode"
    ],
    "not": {
        "required": [ "Oninteraction", "OnValueChanged"]
    }
}
