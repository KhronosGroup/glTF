{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "behaviorNode/event",
    "type": "object",
    "description": "Behavior node event definition.",
    "allOf": [ { "$ref": "glTFProperty.schema.json" } ],
    "properties": {
        "type": {
            "description": "Allowed types.",
            "anyOf": [
                {
                    "const": "OnStart"
                },
                {
                    "const": "OnUpdate"
                },
                {
                    "const": "OnValueChanged"
                },
                {
                    "const": "OnDemand"
                },
                {
                    "const": "OnInteraction"
                },
                {
                    "type": "string"
                }
            ]
        },
        "nextBehaviorNode": {
            "allOf": [ { "$ref": "glTFid.schema.json" } ],
            "description": "The index of the next behavior node to execute."
        },        
        "OnInteraction": {
            "type": "object",
            "$ref": "behaviorNode.interaction.schema.json"
        },
        "OnValueChanged": {
            "type": "object",
            "$ref": "behaviorNode.valuechanged.schema.json"
        },
        "extensions": { },
        "extras": { }
    },
    "required": [
        "type",
        "nextBehaviorNode"
    ],
    "not": {
        "required": [ "OnInteraction", "OnValueChanged"]
    }
}
