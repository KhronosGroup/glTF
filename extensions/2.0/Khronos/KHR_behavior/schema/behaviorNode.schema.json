{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "behaviorNode",
    "type": "object",
    "description": "Behavior node definition.",
    "allOf": [ { "$ref": "glTFProperty.schema.json" } ],
    "properties": {
        "index": {
            "allOf": [ { "$ref": "glTFid.schema.json" } ],
            "description": "The index of the behavior node to execute."
        },        
        "group": {
            "description": "The group of the behaviour nodes.",
            "anyOf": [
                {
                    "const": "controlNode"
                },
                {
                    "const": "setNode"
                },
                {
                    "type": "string"
                }
            ]
        },        
        "extensions": { },
        "extras": { }
    },
    "required": [
        "index",
        "group"
    ]
}
