{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "flowNode/control/if",
    "type": "object",
    "description": "If definition.",
    "allOf": [ { "$ref": "glTFProperty.schema.json" } ],
    "properties": {
        "condition": {
            "allOf": [ { "$ref": "glTFid.schema.json" } ],
            "description": "The index of the condition node."
        },
        "then": {
            "allOf": [ { "$ref": "glTFid.schema.json" } ],
            "description": "The index of the flow node to be executed in the true condition case."
        },
        "else": {
            "allOf": [ { "$ref": "glTFid.schema.json" } ],
            "description": "The index of the flow node to be executed in the false condition case."
        },        
        "extensions": { },
        "extras": { }
    },
    "required": [
        "condition", "then"
    ]
}
