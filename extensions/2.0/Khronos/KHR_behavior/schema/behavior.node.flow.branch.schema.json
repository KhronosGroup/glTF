{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Branch Flow Node",
    "type": "object",
    "allOf": [ { "$ref": "glTFProperty.schema.json" } ],
    "properties": {
        "type": {
            "type": "string",
            "enum": ["flow/branch"]
        },
        "flow": {
            "type": "object",
            "properties": {
                "true": { "$ref": "behavior.types.flow.schema.json" },
                "false": { "$ref": "behavior.types.flow.schema.json" }
            }
        },
        "parameters": {
            "type": "object",
            "properties": {
                "condition": { "$ref": "behavior.types.boolean.schema.json" }
            },
            "required": ["condition"]
        }
    },
    "required": ["type", "parameters"]
}
