{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "EXT_animation_quantization extension",
    "type": "object",
    "allOf": [ { "$ref": "glTFProperty.schema.json" } ],
    "properties": {
        "offset": {
            "type": "array",
            "description": "Applies offset to values from sampler.",
            "items": {
                "type": "number"
            },
            "minItems": 1,
            "maxItems": 4,
            "default": [ 0.0, 0.0, 0.0, 0.0 ]
        },
        "scale": {
            "type": "array",
            "description": "Applies scale to values from sampler.",
            "items": {
                "type": "number"
            },
            "minItems": 1,
            "maxItems": 4,
            "default": [ 1.0, 1.0, 1.0, 1.0 ]
        },
        "timeScale": {
            "type": "number",
            "description": "Applies scale to time value.",
            "default": 1.0
        },
        "extensions": {},
        "extras": {}
      }
}
