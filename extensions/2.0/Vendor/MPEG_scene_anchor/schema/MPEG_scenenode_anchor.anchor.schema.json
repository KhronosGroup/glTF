{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "MPEG_scenenode_anchor.anchor object",
    "type": "object",
    "description": "anchor object.",    
    "properties": {
        "trackable": {
            "type": "number"
        },
        "requiresAnchoring": {
            "type": "boolean"
        },
        "minimumRequiredSpace": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 3,
            "maxItems": 3
        },
        "aligned": {
            "type": "string",
            "enum": ["NOT_USED", "ALIGNED_NOTSCALED", "ALIGNED_SCALED"]
        },
        "actions": {
            "type": "array",
            "description": "An array of associated actions.",
            "items": {
                "type": "number"
            },
            "minItems": 1
        },        
        "extensions": {},
        "extras": {}
    },
    "required": [ "trackable", "requiresAnchoring" ]
}
