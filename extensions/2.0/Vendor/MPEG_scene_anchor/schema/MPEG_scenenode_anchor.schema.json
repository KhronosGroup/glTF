{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "MPEG anchor extension",
    "type": "object",
    "description": "MPEG scene and node anchor is used to anchor a scene/node to the viewer's real-world environment.",
    "allOf": [ { "$ref": "glTFProperty.schema.json" } ],
    "properties": {
        "trackables": {
            "type": "array",
            "description": "An array of trackables.",
            "items": {
                "$ref": "MPEG_anchor.trackable.schema.json"
            },
            "minItems": 1
        },
        "anchors": {
            "type": "array",
            "description": "An array of anchors.",
            "items": {
                "$ref": "MPEG_anchor.anchor.schema.json"
            },
            "minItems": 1
        },
        "extensions": {},
        "extras": {}
    },
    "required": [ "trackables", "anchors" ]
}
