{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "MPEG_lights_texture_based.light",
    "type": "object",
    "description": "Extension to support texture-based lights",
    "allOf": [ { "$ref": "glTFChildOfRootProperty.schema.json" } ],
    "properties": {
        "lights": {
            "type": "array",
            "description": "an array of items that describe the texture-based light sources, referenced in this scene description",
            "items": {                
                "$ref": "MPEG_lights_texture_based.light.schema.json"
            },
            "minItems": 1
        },
        "light": {
            "type": "number",
            "description": "reference to an item in the lights array of the MPEG_lights_texture_based extension"            
        }
    },
    "oneOf": [
        { "required": [ "lights" ] },
        { "required": [ "light" ] }
    ]
}