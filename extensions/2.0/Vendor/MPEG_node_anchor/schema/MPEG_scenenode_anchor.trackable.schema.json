{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "MPEG_anchor.trackable object",
    "type": "object",
    "description": "MPEG scene and node anchor is used to anchor a scene/node to the viewer's real-world environment.",
    "allOf": [ { "$ref": "glTFProperty.schema.json" } ],
    "properties": {
        "type": {
            "type": "string",
            "description": "the type of the trackable.",
            "enum": ["TRACKABLE_FLOOR", "TRACKABLE_CONTROLLER", "TRACKABLE_GEOMETRIC", "TRACKABLE_MARKER_2D", "TRACKABLE_MARKER_3D", "TRACKABLE_MARKER_GEO", "TRACKABLE_APPLICATION"]
        },
        "parameters": {
            "anyOf": [
                {"type": "object", "properties": {}}, 
                {"type": "object", "properties": {"path": {"type": "string"}}}, 
                {"type": "object", "properties": {"geometricConstraint": {"type": "string", "enum": ["HORIZONTAL_PLANE", "VERTICAL_PLANE"]}}}, 
                {"type": "object", "properties": {"markerNode": {"type": "number"}}}, 
                {"type": "object", "properties": {"geoCoordinate": {"type": "number"}}}, 
                {"type": "object", "properties": {"trackable_id": {"type": "string"}}}                
            ]            
        },
        "extensions": {},
        "extras": {}
    },
    "required": [ "type" ]
}
